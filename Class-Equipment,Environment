environment_data = [
    ["East", "Surface", "200m", "1000m", "800m"],
    ["West", "Underground", "200m", "12081", "400m"],
    ["", "", "", "", ""],  # Add more environment data as needed
]
# Creating instances using data
equipment_list = [Equipment(*data) for data in equipment_data]
environment_list = [Environment(*data) for data in environment_data]
# Displaying specifications for equipment
print("Equipment Specifications:")
for equipment in equipment_list:
    equipment.display_specs()
# Displaying specifications for environment
print("Environmental Specifications:")
for environment in environment_list:
    environment.display_specs()




