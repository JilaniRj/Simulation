class Equipment:
    def __init__(self, name, equipment_type, capacity, power, section, equip_type, depth, length, width, utilized_by, utilization, mtbf, mttr):
        self.name = name
        self.equipment_type = equipment_type
        self.capacity = capacity
        self.power = power
        self.section = section
        self.equip_type = equip_type
        self.depth = depth
        self.length = length
        self.width = width
        self.utilized_by = utilized_by
        self.utilization = utilization
        self.mtbf = mtbf
        self.mttr = mttr
    def display_specs(self):
        print(f"{self.name} - {self.equipment_type}")
        print(f"Capacity: {self.capacity}, Power: {self.power}")
        print(f"Section: {self.section}, Type: {self.equip_type}")
        print(f"Dimensions: Depth - {self.depth}, Length - {self.length}, Width - {self.width}")
        print(f"Utilized by: {self.utilized_by}")
        print(f"Utilization: {self.utilization}, MTBF: {self.mtbf}, MTTR: {self.mttr}")
        print()
class Environment:
    def __init__(self, section, env_type, depth, length, width):
        self.section = section
        self.env_type = env_type
        self.depth = depth
        self.length = length
        self.width = width
    def display_specs(self):
        print(f"Environment - {self.env_type}")
        print(f"Section: {self.section}, Type: {self.env_type}")
        print(f"Dimensions: Depth - {self.depth}, Length - {self.length}, Width - {self.width}")
        print()
# Data from simulation8.csv
equipment_data = [
